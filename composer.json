{
    "name": "mrtolouei/persia-validator",
    "description": "Persian validator for Laravel",
    "keywords": [
        "validation",
        "persian-validation",
        "farsi-validation"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alireza Tolouei",
            "email": "mrtolouei.com@gmail.com"
        }
    ],
    "require": {
        "php": "~7.4|| ^8",
        "illuminate/support": "^6|^7|^8|^9|^10"
    },
    "require-dev" : {
        "phpunit/phpunit": "^8|^9|^10"
    },
    "autoload": {
        "psr-4": {
            "Mrtolouei\\PersiaValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mrtolouei\\PersiaValidator\\PersiaValidatorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
